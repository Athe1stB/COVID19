<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mag10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_margin="12dp"
            tools:context="com.example.covid19.updates">
            <TextView
                style="@style/textbox"
                android:text="@string/world"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/updated2"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/lightgray"
                android:layout_gravity="end"
                android:textStyle="normal"
                style="@style/card2"/>
            <LinearLayout
                android:id="@+id/activell2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/LinearlCard"
                    android:background="@drawable/card">
                    <TextView
                        style="@style/card1"
                        android:text="@string/confirmed"/>

                    <TextView
                        style="@style/card2"
                        android:id="@+id/confirmed2"
                        android:textColor="@color/orange"/>
                    <TextView
                        style="@style/card2"
                        android:id="@+id/delconfirmed2"
                        android:textColor="@color/orange"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/recoveredll2"
                    style="@style/LinearlCard"
                    android:background="@drawable/card">
                    <TextView
                        style="@style/card1"
                        android:text="@string/active"/>

                    <TextView
                        android:id="@+id/active2"
                        style="@style/card2"
                        android:textColor="@color/yellow"/>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/deathll2"
                    style="@style/LinearlCard"
                    android:background="@drawable/card">
                    <TextView
                        style="@style/card1"
                        android:text="@string/deaths"/>

                    <TextView
                        android:id="@+id/deaths2"
                        style="@style/card2"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        style="@style/card2"
                        android:id="@+id/deldeath2"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/LinearlCard"
                    android:background="@drawable/card">
                    <TextView
                        style="@style/card1"
                        android:text="@string/recovered"/>

                    <TextView
                        android:id="@+id/recovered2"
                        style="@style/card2"
                        android:textColor="@color/green"/>
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="6dp"
                android:background="@drawable/bluecard">
            <LinearLayout
                android:id="@+id/updatedll2"
                android:layout_width="match_parent"
                style="@style/LinearlCard"
                android:layout_margin="0dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center">


                <TextView
                    android:text="@string/moreinfo"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    style="@style/card1" />

            </LinearLayout>
            </FrameLayout>

        </LinearLayout>


        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:orientation="vertical"
            android:layout_gravity="center"
        android:padding="12dp"
        android:layout_margin="12dp"
        tools:context="com.example.covid19.updates">
        <TextView
            style="@style/textbox"
            android:text="@string/india"
            android:textColor="@color/black"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/updated"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/lightgray"
                android:layout_gravity="end"
                style="@style/card2"/>
        <LinearLayout
            android:id="@+id/activell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearlCard"
                android:background="@drawable/card">
                <TextView
                    style="@style/card1"
                    android:text="@string/confirmed"/>

                <TextView
                    android:id="@+id/confirmed"
                    style="@style/card2"
                    android:textColor="@color/orange"/>
                <TextView
                    android:id="@+id/delconfirmed"
                    style="@style/card2"
                    android:textColor="@color/orange"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"/>
            </LinearLayout>

            <LinearLayout
            style="@style/LinearlCard"
            android:background="@drawable/card">
            <TextView
                style="@style/card1"
                android:text="@string/active"/>

            <TextView
                android:id="@+id/active"
                style="@style/card2"
                android:textColor="@color/mag4"/>
            <TextView
                android:id="@+id/delactive"
                style="@style/card2"
                android:textColor="@color/mag4"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="normal"/>
        </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/deathll"
                style="@style/LinearlCard"
                android:background="@drawable/card">
                <TextView
                    style="@style/card1"
                    android:text="@string/deaths"/>

                <TextView
                    android:id="@+id/death"
                    android:textColor="@color/colorPrimaryDark"
                    style="@style/card2"/>
                <TextView
                    android:id="@+id/deldeath"
                    style="@style/card2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/recoveredll"
                style="@style/LinearlCard"
                android:background="@drawable/card">
                <TextView
                    style="@style/card1"
                    android:text="@string/recovered"/>

                <TextView
                    android:id="@+id/recovered"
                    android:textColor="@color/green"
                    style="@style/card2"/>
                <TextView
                    android:id="@+id/delrecovered"
                    style="@style/card2"
                    android:textColor="@color/green"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"/>
            </LinearLayout>



        </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="6dp"
                android:background="@drawable/bluecard">
            <LinearLayout
                android:id="@+id/updatedll"
                android:layout_width="match_parent"
                style="@style/LinearlCard"
                android:layout_margin="0dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center">
                            <TextView
                                android:text="@string/moreinfo"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                style="@style/card1" />

                        </LinearLayout>
            </FrameLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>